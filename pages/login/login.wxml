<view class='pages'>
  <tabbar tabbar="{{tabbar}}"></tabbar>
  
<form class='form1' bindsubmit='submit'> 

<view class='view1'>
<text class='text'>用户名：</text>
<input class='input' placeholder='请输入用户名' name='uname'></input>
</view>

<view class='view1'>
<text class='text'>密码：</text>
<input class='input' password="true" placeholder='请输入密码' name='pwd'></input>
</view>

<view class="agree" style="margin-top:40rpx">
        <checkbox-group bindchange="checkboxChange">
          <checkbox class="check" value="1" checked="true" bindchange="checkboxChange"></checkbox>
        </checkbox-group>
        <span class="protocol">已阅读并同意 </span> <text class="protocol1" style="color:#98c7ff" bindtap="xieyi">《用户使用协议》</text>
</view>
 
<button class='form-button' form-type='submit'>提交</button>
</form>
</view>

<view class='countDown'>倒计时：<text style='color:red'>{{countDownNum}}</text>s</view>



