  /* <!-- 标题 --> */
.title-wrap { 
margin-top: 30rpx;
}

.title-wrap .title {
  font-size: 50rpx;
  color: black;
  display:flex;
align-items:center;
justify-content:center;
}

.title-wrap .desc {
margin-top: 20rpx;
font-size: 30rpx;
color: gray;
/* 文本text处于中间 */
display:flex;
align-items:center;
justify-content:center;
}

.board {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}

.board .board-item{
  background-color: rgb(209, 181, 25);
  height: 120rpx;
  border: 1rpx solid #eee;
  margin-top: 30rpx;
  display: flex;
  /*移动端展示：元素点击时高亮*/
  cursor: pointer;
}
/* flex是弹性，一种布局方式flex:1相当于width:100%，就是撑开 */
.board text {
  flex: 1;
  font-size: 30rpx;
display:flex;
align-items:center;
justify-content:flex-start;
}

.board image {
  margin-top: 40rpx;
  margin-right: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.bg_red{
/* //透明度变化 */
 opacity: 0.9;
 /* 缩放 */
   transform: scale(1.2,1.2);
   }